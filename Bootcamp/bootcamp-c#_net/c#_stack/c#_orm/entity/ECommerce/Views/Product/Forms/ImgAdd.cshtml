@using Microsoft.AspNetCore.Http
@model ProductImgs

<div class="sky-form-login">
    <h4>Add Image to Product</h4>
    <form action="/addImg" method="post" class="sky-form">
        <input type="hidden" asp-for="ProductsId" value="@ViewBag.id">
        <div class="form-group row">
            <label asp-for="img_url">Image URL: </label>
            <input type="text" class="form-control" asp-for="img_url" placeholder="Enter image URL">
            <span asp-validation-for="img_url"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Add Image</button>
        </div>
    </form>
</div>

