@using Microsoft.AspNetCore.Http
@model Users
<div class="breadcrumb-wrapper">
    <div class="container">
        <h1>Login</h1>
    </div>
</div>
<!--end breadcrumb-->

<div class="space-60"></div>
<div class="container body-content">
    <div class="sky-form-login">
        <h2>Login</h2>
        <form action="/login" method="post" class="sky-form">
            <div class="form-group row">
                <label asp-for="email">E-mail: </label>
                <input type="email" class="form-control" asp-for="email" placeholder="Enter e-mail">
                <span asp-validation-for="email"></span>
            </div>
            <div class="form-group row">
                <label asp-for="password">Password: </label>
                <input type="password" class="form-control" asp-for="password" placeholder="Enter password">
                <span asp-validation-for="password"></span>
                <span>@ViewBag.login</span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Login</button>
            </div>
        </form>
    </div>
</div>