@using Microsoft.AspNetCore.Http
@model Users   

<div class="breadcrumb-wrapper">
    <div class="container">
        <h1>User Create</h1>
    </div>
</div>
<!--end breadcrumb-->

<div class="space-40"></div>
<div class="container body-content">
    <div class="row">
        <div class="col col-md-8">
            <h2>New User Information</h2>
        </div>
        <div class="col col-md-4" style="text-align: right;">
            <a class="btn btn-primary btn-lg" href="/admin/usermanage">Return to Manage Users</a>
        </div>
    </div>
    <div class="space-20"></div>
    <div class="sky-form-login">
        <form action="/admin/usercreate" method="post" class="sky-form">
            <div class="form-group row">
                <label asp-for="first_name">First Name: </label>
                <input type="text" class="form-control" asp-for="first_name" placeholder="Enter first name">
                <span asp-validation-for="first_name"></span>
            </div>
            <div class="form-group row">
                <label asp-for="last_name">Last Name: </label>
                <input type="text" class="form-control" asp-for="last_name" placeholder="Enter last name">
                <span asp-validation-for="last_name"></span>
            </div>
            <div class="form-group row">
                <label asp-for="email">E-mail: </label>
                <input type="email" class="form-control" asp-for="email" placeholder="Enter e-mail">
                <span asp-validation-for="email"></span>
            </div>
            <div class="form-group row">
                <label asp-for="password">Password: </label>
                <input type="password" class="form-control" asp-for="password" placeholder="Enter password">
                <span asp-validation-for="password"></span>
            </div>
            <div class="form-group row">
                <label for="confirm_password">Confirm Password: </label>
                <input type="password" class="form-control" name="confirm_password" placeholder="Enter password">
            </div>
            <div class="form-group">
                <label class="select">
                    <select class="form-control" asp-for="user_level">
                        <option value="0" selected="" disabled="">User Level</option> 
                        <option value="1">User</option>
                        <option value="9">Admin</option>
                    </select>
                    <i></i>
                </label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Create User</button>
            </div>
        </form>
    </div>
</div>
<div class="space-20"></div>