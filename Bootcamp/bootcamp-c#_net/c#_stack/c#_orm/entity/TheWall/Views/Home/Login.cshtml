@using Microsoft.AspNetCore.Http
@model User

    <h1>Login</h1>
    <form action="/login" method="post">
        <div class="form-group row">
            <label asp-for="email">E-mail: </label>
            <input type="email" class="form-control" asp-for="email" placeholder="Enter e-mail">
            <span asp-validation-for="email"></span>
        </div>
        <div class="form-group row">
            <label asp-for="password">Password: </label>
            <input type="password" class="form-control" asp-for="password" placeholder="Enter password">
            <span asp-validation-for="password"></span>
            <span>@ViewBag.login</span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
        <a href="/">Don't have an account? Click here to register!</a>
    </form>
